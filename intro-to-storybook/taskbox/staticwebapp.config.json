{
    "routes": [
        {
            "route": "/index.html",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/login",
            "redirect": "/.auth/login/aad",
            "allowedRoles": [
                "anonymous",
                "authenticated"
            ]
        },
        {
            "route": "/logout",
            "redirect": "/.auth/logout",
            "allowedRoles": [
                "anonymous",
                "authenticated"
            ]
        }
    ],
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "/login",
            "/logout",
            "/.auth/*"
        ]
    },
    "globalHeaders": {
        "content-security-policy": "default-src https: 'unsafe-eval' 'unsafe-inline'; object-src 'none'"
    },
    "mimeTypes": {
        ".json": "text/json"
    }
}